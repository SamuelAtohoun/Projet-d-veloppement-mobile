<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Champ de texte modifiable pour modifier le nom de la t창che -->
    <EditText
        android:id="@+id/editTaskName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Modifier le nom de la t창che" />

    <!-- Champ de texte modifiable pour modifier la description de la t창che -->
    <EditText
        android:id="@+id/editTaskDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Modifier la description de la t창che"
        android:layout_marginTop="16dp" />

    <!-- Bouton de sauvegarde pour enregistrer les modifications -->
    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modifier"
        android:layout_marginTop="16dp" />

</LinearLayout>
